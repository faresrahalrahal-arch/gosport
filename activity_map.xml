<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Ø§Ù„ØµÙØ­Ø© Ø§Ù„Ø±Ø¦ÙŠØ³ÙŠØ© -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ðŸ—ºï¸ MAP -->
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!-- â˜° Menu Icon -->
        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:layout_margin="7dp"
            android:background="@drawable/bg_circle_white"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:elevation="12dp"/>

        <!-- ðŸ”¥ MODERN SEARCH BAR FULL WIDTH -->
        <RelativeLayout
            android:id="@+id/searchContainer"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/menuIcon"
            android:background="@drawable/bg_search_modern"
            android:elevation="12dp"
            android:gravity="center_vertical"
            android:paddingStart="50dp"
            android:paddingEnd="10dp">

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_menu_search" />

            <EditText
                android:id="@+id/editSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/searchIcon"
                android:background="@android:color/transparent"
                android:hint="Recherche terrain..."
                android:singleLine="true"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/clearSearch"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:visibility="gone" />
        </RelativeLayout>
        <!-- ðŸ”¥ BOTTOM BAR MODERN -->
        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="1dp"
            android:background="@drawable/bg_bottom_bar"
            android:gravity="center"
            android:orientation="horizontal"
            android:elevation="20dp"
            android:padding="10dp">

            <!-- Home -->
            <LinearLayout
                android:id="@+id/navHome"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_mylocation"/>

                <TextView
                    android:text="Home"
                    android:textSize="12sp"
                    android:textColor="#000000" android:layout_height="0dp"
                    android:layout_width="7dp" />
            </LinearLayout>

            <!-- Docs -->
            <LinearLayout
                android:id="@+id/navDocs"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_agenda"/>

                <TextView
                    android:text="Docs"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_height="0dp"
                    android:layout_width="0dp" />
            </LinearLayout>

            <!-- More -->
            <LinearLayout
                android:id="@+id/navMore"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_more"/>

                <TextView
                    android:text="More"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_height="0dp"
                    android:layout_width="0dp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <!-- MENU -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#111111"
        android:orientation="vertical">

        <!-- ðŸ”¥ HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#1E1E1E"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@mipmap/user"
                android:padding="10dp"
                android:src="@android:drawable/sym_def_app_icon" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="User Name"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- ðŸ”Ž TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Filter Terrain"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- CHECKBOXES -->
        <CheckBox
            android:id="@+id/cbFootball"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#00C853"
            android:padding="12dp"
            android:text="Football"
            android:textColor="#FFFFFF" />

        <CheckBox
            android:id="@+id/cbBasket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#00C853"
            android:padding="12dp"
            android:text="Basketball"
            android:textColor="#FFFFFF" />

        <CheckBox
            android:id="@+id/cbTennis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#00C853"
            android:padding="12dp"
            android:text="Tennis"
            android:textColor="#FFFFFF" />

        <CheckBox
            android:id="@+id/cbVolley"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#00C853"
            android:padding="12dp"
            android:text="Volleyball"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>